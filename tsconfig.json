{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "rootDirs": ["./src", "./public"],
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "public/**/*.ts"]
}
